			public void actionPerformed(ActionEvent e) {
				num.setSecond(Double.parseDouble(textField.getText()));
				String answer=String.format("%.2f", num.Calc());
				answer=answer.replace(",", ".");
				textField.setText(answer);
				}
			}
			
